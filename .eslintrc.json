{
    "extends": "react-app",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ],
        "@typescript-eslint/explicit-function-return-type": "warn",
        "react/jsx-no-bind": "warn",
        "react/jsx-key": "error",
        "no-console": "warn",
        "no-var": "warn",
        "prefer-const": "warn"
    }
}
