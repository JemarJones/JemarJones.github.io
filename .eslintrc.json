{
    "extends": "react-app",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ],
        "react/jsx-no-bind": "warn",
        "react/jsx-key": "error",
        "no-console": "warn",
        "no-var": "warn",
        "prefer-const": "warn"
    },
    "overrides": [
        {
            "files": ["**/*.ts?(x)"],
            "rules": {
                "@typescript-eslint/explicit-function-return-type": "warn"
            }
        }
    ]
}
